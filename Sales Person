-- LeetCode 607: Sales Person
-- Find salespersons who did not have any orders
-- with the company named 'RED'

SELECT
    s.name
FROM SalesPerson s
WHERE NOT EXISTS (
    SELECT 1
    FROM Orders o
    JOIN Company c
        ON o.com_id = c.com_id
    WHERE o.sales_id = s.sales_id
      AND c.name = 'RED'
);
